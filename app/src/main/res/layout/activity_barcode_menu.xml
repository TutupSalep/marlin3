<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="16dp">

  <android.support.v7.widget.CardView
    android:id="@+id/cv_barcode_scan"
    android:layout_width="0dp"
    android:layout_height="?attr/actionBarSize"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toTopOf="@id/cv_barcode_search"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_gravity="center|start"
      android:text="@string/str_barcode_scan"
      tools:text="Barcode Scan"
      />
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_gravity="center|end"
      android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
      />
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/cv_barcode_search"
    android:layout_width="0dp"
    android:layout_height="?attr/actionBarSize"
    android:layout_marginTop="16dp"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cv_barcode_scan"
    >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_gravity="center|start"
      android:text="@string/str_barcode_search"
      tools:text="Barcode Search"
      />
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_gravity="center|end"
      android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
      />
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>